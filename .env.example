# Основной бот
BOT_TOKEN=your_bot_token_here
BOT_NAME=your_bot_name

# Redis (обязательно)
REDIS_URL=redis://127.0.0.1:6379/0

# Kie.ai Sora 2 API для генерации видео
KIE_AI_API_KEY=your_kie_ai_api_key

# Крипто-платежи (0xprocessing)
PAYMENT_API=your_0xprocessing_api_key
MERCHANT_ID=your_merchant_id

# Фиат-платежи (Lava)
LAVA_PAYMENT_API=your_lava_api_key

# Способы оплаты
CRYPTO_ENABLED=true
CARD_ENABLED=true
STARS_ENABLED=false

# Webhook для Lava (фиат)
WEBHOOK_USERNAME=lava_payment_webhook
WEBHOOK_PASSWORD=your_webhook_password
WEBHOOK_PASSWORD_PROCESSING=your_webhook_secret

# Админ-бот
BOT_TOKEN_ADMIN=your_admin_bot_token

# Настройки бесплатной квоты
FREE_QUOTA_PER_USER=0

# Реферальная программа
REFERRAL_ENABLED=true
REFERRAL_BONUS_GENERATIONS=1
EXPERT_REFERRAL_CASHBACK_PERCENT=50

# Telegram контакт поддержки
SUPPORT_USERNAME=your_support_username

# Webhook настройки
USE_WEBHOOK=false
WEBHOOK_DOMAIN=https://your-domain.com
WEBHOOK_PORT=3000
WEBHOOK_PATH=/bot-webhook

# YouTube API (автозагрузка видео)
YOUTUBE_ENABLED=false
YOUTUBE_AUTO_UPLOAD=false
YOUTUBE_CLIENT_ID=your_client_id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_client_secret
YOUTUBE_REFRESH_TOKEN=your_refresh_token
YOUTUBE_PRIVACY=public
YOUTUBE_CATEGORY=23
